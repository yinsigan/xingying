- if @public_accounts.empty?

  %div.clearfix
    %a{href: "#{new_public_account_path}", class: "btn btn-info pull-right"}
      %span.glyphicon.glyphicon-plus
      = t('.add')
  .bs-callout.bs-callout-info
    %h4= t('.no_content')
- else
  .page-header
    %h3= t('.list')
  .panel.panel-default
    .panel-body
      %a{href: "#{new_public_account_path}", class: "btn btn-info pull-right"}
        %span.glyphicon.glyphicon-plus
        = t('.add')
    %table.table.table-bordered#public_accounts
      %tr
        %th.text-center= PublicAccount.human_attribute_name('name')
        %th= t('created_at')
        %th= PublicAccount.human_attribute_name('tp')
        %th{colspan: 3}= t('operation')

      = render @public_accounts
