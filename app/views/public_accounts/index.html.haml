- if @public_accounts.empty?

  %div.clearfix.boot-tour{data:{"bootstro-title" => t('.append.title'), "bootstro-content" => t('.append.content'), "bootstro-placement" => t('.append.placement') , "sbootstro-width" => "400px",  "bootstro-step" => t('.append.step')}}
    %a{href: new_public_account_path, class: "btn btn-primary pull-right"}
      %span.glyphicon.glyphicon-plus
      = t('.add')
  .bs-callout.bs-callout-default
    %h4= t('.no_content')
  :javascript
    $(document).ready(function(){
      showGuide(".boot-tour");
    });
- else
  %h3.title-divider
    %span
      = t('.list')
  %p.text-right
    %a#need-help.btn.btn-info
      %i.fa.fa-question
        = t('.help')
  .panel.panel-default
    .panel-body
      %a{href: new_public_account_path, class: "btn btn-primary pull-right"}
        %span.glyphicon.glyphicon-plus
        = t('.add')
    %table.table.table-bordered#public_accounts
      %tr
        %th.text-center= PublicAccount.human_attribute_name('name')
        %th= t('created_at')
        %th= PublicAccount.human_attribute_name('tp')
        %th{colspan: 3}= t('operation')

      = render @public_accounts

  :coffee
    $(document).ready ->
      $("#need-help").on "click", ->
        showGuide(".boot-tour")