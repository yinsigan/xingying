.panel.panel-default
  .panel-heading
    %h3.panel-title= t('base_info')
  .panel-body
    .row
      .col-md-3
        %a.thumbnail
          = image_tag @public_account.image_url(:thumb).to_s
      .col-md-9
        %table.table.table-user-information
          %tbody
            %tr
              %td= PublicAccount.human_attribute_name('name')
              %td= @public_account.name
            %tr
              %td= t('created_at')
              %td= @public_account.created_at.to_time.strftime('%Y-%m-%d %H:%M:%S')
            %tr
              %td= PublicAccount.human_attribute_name('tp')
              %td= PublicAccount::TP[@public_account.tp]
  .panel-footer.clearfix
    %span.pull-right
      %a.btn.btn-sm.btn-info{"title" => t('edit'), "data-toggle" => "tooltip", :href => "#{edit_public_account_path(@public_account)}", "data-placement" => "top", "data-tooltip" => true}
        %i.glyphicon.glyphicon-edit
      = link_to delete_public_account_path(@public_account), "title" => t('delete'), "data-toggle" => "tooltip", "data-placement" => "top", "data-tooltip" => true, class: "btn btn-danger btn-sm", remote: true do
        %i.glyphicon.glyphicon-remove

.panel.panel-default
  .panel-heading
    %h3.panel-title= t('.develop_center')

  .panel-body
    .row
      .col-md-12
        .bs-callout.bs-callout-default
          %h4= t('.weixin_dev_title')
          %p.text-muted= t('.weixin_dev_des')
          %p
            = link_to t('.weixin_dev_btn'), show_token_public_account_path(@public_account), class: "btn btn-default", remote: true
