%h3.title-divider
  %span
    = t('.title')

.alert.alert-info{role: "alert"}
  = t('.notice')
.panel.panel-default
  .panel-body
    .alert.alert-warning{role: "alert"}
      = t('required_note').html_safe
    = render 'form'

:coffee
  $(document).ready ->
    unless $.cookie("new_public_account_guide_#{current_user.id}", Boolean)
      showGuide ".boot-tour",
        onExit: ->
          $.cookie "new_public_account_guide_#{current_user.id}", true,
            expires: 30
