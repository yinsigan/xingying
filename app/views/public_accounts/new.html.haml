:javascript
  $(document).ready(function() {
    if(!($.cookie("new_public_account_guide", Boolean))){
      showGuide(".boot-tour", {
        onExit: function(){
          $.cookie("new_public_account_guide", true, { "expires": 30 });
        }
      });
    }
  });
