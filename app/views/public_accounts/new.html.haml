.page-header
  %h3= t('.title')
/ panel preview
.alert.alert-info{role: "alert"}
  = t('.notice')
.panel.panel-default
  .panel-body.form-horizontal.payment-form
    = form_for @public_account do |f|
      = render partial: "shared/form_error_messages", locals: {object: @public_account}
      .form-group
        = f.label :name, class: "col-sm-3 col-xs-3 control-label"
        .col-sm-9.col-xs-9.required-field-block
          = f.text_field :name, class: "form-control"
          = required_icon
      .form-group
        = f.label :tp, class: "col-sm-3 col-xs-3 control-label"
        .col-sm-9.col-xs-9
          = f.select :tp, options_for_select(PublicAccount::TP.invert), {include_blank: "#{t('please_select')}"}, {:class => "form-control"}
      .form-group
        = f.label :image, class: "col-sm-3 col-xs-3 control-label"
        .col-sm-9.col-xs-9.styled
          .imagePreview
          = f.file_field :image, class: "form-control", onchange: "previewImage(this, [258], 4);"
      .form-group
        .col-sm-offset-3.col-sm-9
          = f.submit "#{t('sumbit')}", class: "btn btn-primary", "data-disable-with" => "#{t('disable-with-submit')}"
