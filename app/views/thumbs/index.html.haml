= render partial: "material/tab"
%h3.title-divider#request{"data-request" => request.original_url}
  %span
    = t('.list')
.row
  .col-md-12.clearfix
    .pull-right
      = form_tag upload_public_account_thumbs_path(@public_account), method: "post", id: "picture_upload" do
        = file_field_tag "image", :class => "filestyle", "data-buttonText" => "#{t('upload')}", "data-input" => false, "data-badge" => false, "data-buttonBefore" => false, "data-buttonName" => "btn-primary", "data-redirect" => public_account_thumbs_url(@public_account), id: "upload"
      = render "shared/progress"
.row.margintop20
  .col-md-12
    .btn-group
      = link_to public_account_thumbs_path(@public_account), type: "button", class: "btn btn-default #{current_page?(public_account_thumbs_path(@public_account)) ? 'active' : nil}" do
        = t('.no_group')
        %em.num
          = @no_group_count
      = render partial: "thumb_groups/thumb_group", collection: @thumb_groups unless @thumb_groups.empty?
      = link_to t('.create_group'), new_public_account_thumb_group_path(@public_account), class: "btn btn-primary", remote: true, id: "create_group"
- if @thumbs.empty?
  .bs-callout.bs-callout-info
    %h4= t('.no_content')
- else
  .panel.panel-default.margintop30
    .panel-heading
      %h3.panel-title.custom-panel-link.clearfix
        = t('.thumb_count', count: @public_account.thumbs_count)
        %a{class: "btn btn-link"} 删除分组
        %a{class: "btn btn-link"} 重命名分组
    .panel-body
      .row.operate
        .col-md-12
          #operate-button.normal-header.page-header
            %input.icheck-me#check_all{"data-color" => "blue", "data-skin" => "square", :type => "checkbox"}
            %label{for: "check_all", style: "font-weight: normal"}
              = t('select_all')
            = link_to t('.move_to_group'), move_public_account_thumbs_path(@public_account), class: "btn btn-default disabled", remote: true
            = link_to t('delete'), delete_all_public_account_thumbs_path(@public_account), class: "btn btn-danger disabled", remote: true
      .row
        #pic_content.col-md-12
          = render @thumbs
      .row
        .col-md-12.text-right
          = paginate @thumbs
= render "shared/blueimp_gallery"
