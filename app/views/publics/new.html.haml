%legend 公众账号绑定
/ panel preview
.alert.alert-info{role: "alert"}
  = t('.notice')
.panel.panel-default
  .panel-body.form-horizontal.payment-form
    = form_for @public do |f|
      - if @public.errors.any?
        #error_explanation
          %h2= "#{pluralize(@public.errors.count, "error")} prohibited this public from being saved:"
          %ul
            - @public.errors.full_messages.each do |msg|
              %li= msg
      .form-group
        = f.label :name, class: "col-sm-3 control-label"
        .col-sm-9
          = f.text_field :name, class: "form-control"
      .form-group
        = f.label :password, class: "col-sm-3 control-label"
        .col-sm-9
          = f.password_field :password, class: "form-control"
      .form-group
        = f.label :tp, class: "col-sm-3 control-label"
        .col-sm-9
          = f.number_field :tp, class: "form-control"
      .form-group
        .col-sm-offset-3.col-sm-9
          = f.submit "#{t('.submit')}", class: "btn btn-success"
