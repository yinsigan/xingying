%legend 公众账号绑定
/ panel preview
.alert.alert-info{role: "alert"}
  = t('.notice')
.panel.panel-default
  .panel-body.form-horizontal.payment-form
    = form_for @public do |f|
      - if @public.errors.any?
        .alert.alert-danger
          %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"}
            ×
          %span.glyphicon.glyphicon-hand-right
            %strong
              = I18n.t("errors.messages.not_saved", count: @public.errors.count, resource: @public.class.model_name.human.downcase)
          %hr.message-inner-separator
            %p
              = @public.errors.full_messages.map { |msg| content_tag(:li, msg) }.join.html_safe
      .form-group
        = f.label :name, class: "col-sm-3 control-label"
        .col-sm-9
          = f.text_field :name, class: "form-control"
      .form-group
        = f.label :password, class: "col-sm-3 control-label"
        .col-sm-9
          = f.password_field :password, class: "form-control"
      .form-group
        = f.label :tp, class: "col-sm-3 control-label"
        .col-sm-9
          = f.number_field :tp, class: "form-control"
      .form-group
        .col-sm-offset-3.col-sm-9
          = f.submit "#{t('.submit')}", class: "btn btn-success"
