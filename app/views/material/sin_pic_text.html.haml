= render partial: "material/tab"
.panel.panel-default{style: "margin-top: 30px"}
  .panel-heading
    %h3.panel-title
      = t('.title')
  .panel-body
    #edit_sin_preview.col-md-4.edit_sin_box
      %h4
        Lorem ipsum dolor sit amet, consectetur magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
      .thumb
        %i.default
          = t('.thumb')
      .desc
        sss
    #edit_sin.col-md-8.edit_sin_pic_text
      .inner.well
        = form_for [@public_account, @sin_material], html: { role: "form" } do |f|
          = render partial: "shared/form_error_messages", locals: {object: @sin_material}
          = fields_for "sin_material[sin_pic_text_attributes]", @sin_pic_text do |sin_pic_text|
            .form-group.padding-content
              = sin_pic_text.label :title, class: "col-sm-12 control-label required font-normal"
              .col-sm-12
                = sin_pic_text.text_field :title, class: "form-control"
            .form-group.padding-content
              = label_tag "thumb_image", t('activerecord.attributes.sin_pic_text.thumb'), class: "col-sm-12 control-label font-normal"
              .col-sm-12
                = file_field_tag "image", "data-url" => "/public_accounts/#{@public_account.id}/thumbs"
                .progress.min-progress#progress
                  .progress-bar#progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: 60%;"}
                %p#upload-status
                %p#progress
                %p#result
            .form-group.padding-content
              = sin_pic_text.label :desc, class: "col-sm-12 control-label font-normal"
              .col-sm-12
                = sin_pic_text.text_area :desc, class: "form-control", rows: 5
            .form-group.padding-content
              = sin_pic_text.label :body, class: "col-sm-12 control-label required font-normal"
              .col-sm-12
                = sin_pic_text.text_area :body, class: "form-control"
            .col-sm-12
              = f.submit "#{t('save')}", class: "btn btn-primary", "data-disable-with" => "#{t('disable-with-save')}"
      %i.arrow_out
      %i.arrow_in

:javascript
  $(document).on("page:change", function() {


      var image = document.getElementById('image');
      var url = $("#image").attr("data-url");
      var id = $("#image").attr("id");
      var name = $("#image").attr("name");
      initFileOnlyAjaxUpload(url, id, name);


  })
