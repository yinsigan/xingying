- if flash.any?
  #flash-messages
    .container
      - if flash[:notice]
        .alert.alert-info.alert-autocloseable-info
          = flash[:notice]
      - if flash[:success]
        .alert.alert-success.alert-autocloseable-success
          = flash[:success]
      - if flash[:warning]
        .alert.alert-warning.alert-autocloseable-warning
          = flash[:warning]
      - if flash[:danger]
        .alert.alert-danger.alert-autocloseable-danger
          = flash[:danger]
