    = javascript_include_tag 'shops', 'data-turbolinks-track' => true
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    = csrf_meta_tags
    = render 'layouts/shared/statistics'
  %body
    = render 'layouts/shops/default/top'
    #content
      .container
        .row
          .col-md-12
            = yield

