!!!
%html
  %head
    = render_page_title_tag
    = stylesheet_link_tag    'settings', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'settings', 'data-turbolinks-track' => true
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    = csrf_meta_tags
  %body
    = render 'layouts/shared/topbar'
    #content
      .container
        / .row
        /   .col-md-12
        /     = render 'layouts/shared/verify_email'
        .row
          .col-md-12
            = render 'layouts/shared/flash_messages'
        .row
          .col-md-3
            = render 'layouts/shared/sidebar_left'
          .clearfix.visible-xs-block
          .col-md-9
            = render_breadcrumbs
            = yield
    = render 'layouts/shared/footer'
    = render 'shared/alert_fixed_top'
    = render 'shared/modal'