.media.clearfix.padding15.border-top
  .media-heading.pull-left
    %a.media-left
    = image_tag notification.user.avatar_url(:normal).to_s
  .media-body.clearfix
    %small.pull-right.text-muted
      = notification.created_at.strftime('%Y-%m-%d %H:%M:%S')
    %h4.media-heading
      - case notification.tp
      - when "system"
        = t('.system_notice')
        = notification.subject
      - when "ticket_comment"
        = t('.ticket_comment_notice')
    = truncate notification.body, :length => 140