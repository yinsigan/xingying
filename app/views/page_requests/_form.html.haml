= form_for @page_request do |f|
  - if @page_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page_request.errors.count, "error")} prohibited this page_request from being saved:"
      %ul
        - @page_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :path
    = f.text_field :path
  .field
    = f.label :page_duration
    = f.text_field :page_duration
  .field
    = f.label :view_duration
    = f.text_field :view_duration
  .field
    = f.label :db_duration
    = f.text_field :db_duration
  .field
    = f.label :index
    = f.text_field :index
  .actions
    = f.submit 'Save'
