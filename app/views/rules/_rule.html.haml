.panel.panel-default
  .panel-heading
    %h3.panel-title.clearfix
      %strong
        = t('.title', counter: @rules_count - rule_counter)
      = rule.name
      %i.fa.fa-sort-desc.pull-right
  .panel-body
    %table.table.table-user-information
      %tbody
        %tr
          %td= t('.kword')
          %td= rule.kwords.map { |kword| content_tag(:em, kword.content, class: "keywords_name") }.join.html_safe
        %tr
          %td= t('.reply')
          %td ssss
  .panel-footer.clearfix
    %span.pull-right
      = link_to nil, class: "btn btn-info btn-sm" do
        %i.glyphicon.glyphicon-edit
        = t('edit')
      = link_to nil, class: "btn btn-danger btn-sm" do
        %i.glyphicon.glyphicon-remove
        = t('delete')
