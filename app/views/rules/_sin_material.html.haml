.form-group
  = label_tag "rule_kwords_attributes_#{kword_index}_subjectable_id", t('activerecord.attributes.kword.sin_material'), class: "col-sm-2 control-label required"
  .col-sm-8.pic_text_content{id: "preview_wrapper_#{kword_index}_#{rule_id}"}
    - if kword_object.try(:subjectable_type).presence == "SinMaterial"
      = render partial: "sin_materials/sin_material", locals: {sin_material: kword_object.sin_material, sin_col: "col-sm-6"}
    - else
      = text_field_tag "", t('no_select'), disabled: true, class: "form-control"
.form-group
  .col-sm-8.col-sm-push-2
    = link_to t('.select_btn'), select_sin_material_public_account_path(@public_account, hidden_tag: "subjectable_tag_#{kword_index}_#{rule_id}", preview_wrapper: "preview_wrapper_#{kword_index}_#{rule_id}"), class: "btn btn-default", remote: true
%input{type: "hidden", name: "rule[kwords_attributes][#{kword_index}][subjectable_id]", id: "subjectable_tag_#{kword_index}_#{rule_id}", value: kword_object.try(:subjectable_id).presence}
