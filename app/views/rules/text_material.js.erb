<% if @edit.present? %>
  var reply_content_id = "#reply_content_" + "<%= @edit %>" + "_" + "<%= @kword_index %>";
<% else %>
  var reply_content_id = "#reply_content_" + "<%= @kword_index %>";
<% end %>
$(reply_content_id).html("<%= j(render partial: "rules/text_material", locals: {kword_index: @kword_index, kword_object: @kword_object}) %>");
