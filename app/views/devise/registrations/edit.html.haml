.modal-dialog
  .modal-content
    .modal-header
      %h1.text-center= t('change_password')
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal", role: "form" }) do |f|
      .modal-body.clearfix
        = devise_error_messages!
        .form-group
          = f.label :current_password, class: "control-label col-lg-3"
          .col-lg-7
            = f.password_field :current_password, autocomplete: "off", class: "form-control input-lg", placeholder: t('hit_current_password'), required: true
        .form-group
          = f.label :password, class: "control-label col-sm-3"
          .col-sm-7
            = f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: t('hit_new_password'), required: true
        .form-group
          = f.label :password_confirmation, class: "control-label col-sm-3"
          .col-sm-7
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: t('hit_new_password_confirmation'), required: true
      .modal-footer
        .col-sm-12
          = f.submit t('save'), class: "btn btn-primary btn-lg btn-block", "data-disable-with" => t('disable-with-save')