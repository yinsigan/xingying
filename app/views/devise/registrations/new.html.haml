.modal-dialog
  .modal-content
    .modal-header
      %h1.text-center= t('signup')
    .modal-body.clearfix
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "loginform", class: "form-horizontal", role: "form", data: {"bv-feedbackicons-valid" => "glyphicon glyphicon-ok", "bv-feedbackicons-invalid" => "glyphicon glyphicon-remove", "bv-feedbackicons-validating" => "glyphicon glyphicon-refresh"} }) do |f|
        .form-group
          = f.label :email, class: "control-label col-sm-3"
          .col-sm-7
            = f.email_field :email, autocomplete: "off", class: "form-control input-lg", placeholder: t('hit_email'), required: true, autofocus: true
        .form-group
          = f.label :password, class: "control-label col-sm-3"
          .col-sm-7
            = f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: t('hit_password'), required: true, "data-bv-stringlength" => "true", "data-bv-stringlength-min" => 8, "data-bv-identical" => true, "data-bv-identical-field" => "user[password_confirmation]"
        .form-group
          = f.label :password_confirmation, class: "control-label col-sm-3"
          .col-sm-7
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: t('hit_password_confirmation'), required: true, "data-bv-identical" => true, "data-bv-identical-field" => "user[password]"
        .form-group
          .col-sm-offset-3.col-sm-7
            = f.submit t('save'), class: "btn btn-primary btn-lg btn-block", "data-disable-with" => t('disable-with-save')
    .modal-footer
      .col-md-12.text-left.clearfix
        %p
          = link_to t('login'), new_session_path(:user), class: "pull-right"
:javascript
  $(document).ready(function() {
    $("#loginform").bootstrapValidator();
  });
