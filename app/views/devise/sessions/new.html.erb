<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
      <h1 class="text-center login-title"><%= t('welcome_login') %></h1>
      <div class="account-wall">
        <img class="profile-img" src="/assets/users/photo.png" alt="">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
          <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "#{t('email')}" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "#{t('password')}", required: true, class: "form-control" %>
          <button class="btn btn-lg btn-primary btn-block" type="submit" data-disable-with="<%= t('disable-with-login') %>" >
            <%= t('login') %></button>
          <% if devise_mapping.rememberable? -%>
            <label class="checkbox pull-left" style="padding-left: 20px;">
              <%= f.check_box :remember_me %>
              <%= t('remember_me') %>
            </label>
          <% end -%>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "#{t('forget_password')}", new_password_path(resource_name), class: "pull-right need-help" %><span class="clearfix"></span>
          <% end -%>
        <% end %>
      </div>
    </div>
  </div>
</div>
