<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">欢迎登录</h1>
            <div class="account-wall">
                <img class="profile-img" src="/assets/users/photo.png"
                    alt="">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
                  <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "电子邮箱" %>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "密码", required: true, class: "form-control" %>
                  <button class="btn btn-lg btn-primary btn-block" type="submit">
                      登录</button>
                  <% if devise_mapping.rememberable? -%>
                    <label class="checkbox pull-left">
                      <%= f.check_box :remember_me %>
                      记住我
                    </label>
                  <% end -%>
                  <a href="#" class="pull-right need-help">忘记密码? </a><span class="clearfix"></span>
                <% end %>
            </div>
        </div>
    </div>
</div>

<%= render "devise/shared/links" %>
