<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
  <div class="panel panel-info" >
    <div class="panel-heading">
      <div class="panel-title">修改密码</div>
    </div>

    <div style="padding-top:30px" class="panel-body" >

      <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal", id: "loginform", role: "form" }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", id: "login-username", class: "form-control", placeholder: "新密码" %>
        </div>

        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password_confirmation, autocomplete: "off", id: "login-password", class: "form-control", placeholder: "再输入一次新密码" %>
        </div>

        <div style="margin-top:10px" class="form-group">
          <div class="col-sm-12 controls">
            <%= f.submit "提交", id: "btn-fblogin", class: "btn btn-primary", "data-disable-with" => "正在发送..." %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
