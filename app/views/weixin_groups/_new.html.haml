.modal-header
  %button.close{"data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close
  %h4#mymodal.modal-title sss
.modal-body.clearfix
  .form-horizontal
    .form-group
      = label_tag "group_name", t('.group_name'), class: "col-sm-3 control-label required"
      .col-sm-9
        = text_field_tag "group_name", @group_name, class: "form-control", required: true, autofocus: true
.modal-footer
  %button{type: "button", class: "btn btn-default", "data-dismiss" => "modal"}
    = t('close')
