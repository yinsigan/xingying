%h3.title-divider
  %span
    = t('.title')
.alert.alert-info{role: "alert"}
  %p
    = raw t('.note1')
  %p
    = raw t('.note2')

.row
  .col-md-5
    .iphone-menu
      - unless @menus.empty?
        #menu-parent
          = render partial: "one_level_menu", collection: @menus

  .col-md-7
    -# 添加一级菜单按钮
    = link_to t('.new_top_menu'), new_public_account_menu_path(@public_account), class: "btn btn-primary #{!@menus.empty? && @menus.count >= 3 ? 'disabled' : nil}", remote: true
    - if @menus.empty?
      .bs-callout.bs-callout-default
        %h4= t('.no_content')
    - else
      .page-header
        .btn-group
          = link_to "启用并发布菜单", nil, class: "btn btn-primary"
          = link_to "停用菜单", nil, class: "btn btn-default"
      = render @menus
