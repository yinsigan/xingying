= render partial: "material/tab"
.row
  .col-md-12.text-right
    .btn-group
      = link_to new_public_account_sin_material_path(@public_account), class: "btn btn-default",id: "sin_pic", "data-bootstro-title" => t('.sin_pic.title'), "data-bootstro-content" => t('.sin_pic.content'), "data-bootstro-placement" => "left" , "data-bootstro-width" => "400px",  "data-bootstro-step" => t('.sin_pic.step') do
        = t('.add_sin_pic_text')
      = link_to multi_pic_text_public_account_path(@public_account), class: "btn btn-default" , id: "multi_pic", "data-bootstro-title" => t('.multi_pic.title'), "data-bootstro-content" => t('.multi_pic.content'), "data-bootstro-placement" => t('.multi_pic.placement')  , "data-bootstro-width" => "400px",  "data-bootstro-step" => t('.multi_pic.step') do
        = t('.add_multi_pic_text')
- if @sin_materials.empty?
  .bs-callout.bs-callout-default
    %h4= t('.no_content')
- else
  .panel.panel-default.margintop30
    .panel-heading
      %h3.panel-title
        = t('.pic_text_count', count: @public_account.pic_text_count)
    .panel-body
      - if @public_account.pic_text_count > 0
        .row
          .col-md-12.text-right
            .btn-group.btn-group-sm
              - if controller_name == "sin_materials"
                %button{class: "btn btn-default active"}
                  = t('.sin_pic_text')
              - else
                %a{class: "btn btn-default", href: "#{public_account_sin_materials_path(@public_account)}"}= t('.sin_pic_text')
              %a{class: "btn btn-default", type: "button"}
                = t('.multi_pic_text')
      .row
        .pic_text_content.col-md-12.margintop20
          = render partial: "sin_material", collection: @sin_materials, locals: {sin_col: "col-md-4"}
      .row
        .col-md-12.text-right
          = paginate @sin_materials


