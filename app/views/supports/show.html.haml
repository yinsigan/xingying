= render "sidebar_left"

.col-md-9
  .article-header.page-header
    %h2
      = @support.title
  %p.text-muted.pull-right
    = @support.created_at.to_time.strftime('%Y-%m-%d %H:%M:%S')
  .clearfix
  = raw @support.body

  .text-right
    - if session[:return_to]
      = link_to session[:return_to], class: "btn btn-primary" do
        %i.fa.fa-arrow-left
        = t('back')
    - else
      = link_to supports_path, class: "btn btn-primary" do
        %i.fa.fa-arrow-left
        = t('back')