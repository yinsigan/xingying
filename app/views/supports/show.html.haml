= render "sidebar_left"

.col-md-9
  .article-header.page-header
    %h2
      = @support.title
  %p.text-muted.pull-right
    = I18n.localize(@support.created_at, :format => :long)
  .clearfix
  = raw @support.body

  .text-right
    - if session[:return_to]
      = link_to session[:return_to], class: "btn btn-primary" do
        %i.fa.fa-arrow-left
        = t('back')
    - else
      = link_to supports_path, class: "btn btn-primary" do
        %i.fa.fa-arrow-left
        = t('back')