.form-group
  = label_tag "public_account[autoreply]", t('.autoreply'), class: "col-sm-3 control-label"
  .col-sm-9
    = text_area_tag "public_account[autoreply]", @public_account.try(:autoreply), class: "form-control", rows: 12, id: "text"
    %p.text-muted.pull-right
      = t('char_tip')
      %span#chars


:coffee
  $(document).ready ->
    elem = $("#chars")
    $("#text").limiter 600, elem  if $("#text").length > 0
