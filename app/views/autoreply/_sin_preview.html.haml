.col-sm-6.sin_box
  .sin_box_content
    %h4.appmsg_title
      %a{onclick: "return false;", href: "javascript:void(0);", target: "_blank"}
        = @public_account.default_sin_material.sin_pic_text.title
    %h4.appmsg_time
      = @public_account.default_sin_material.sin_pic_text.created_at.to_time.strftime('%Y-%m-%d %H:%M:%S')
    .thumb
      %i.default
        - if @public_account.default_sin_material.sin_pic_text.thumb.present?
          = image_tag @public_account.default_sin_material.sin_pic_text.thumb.image_url(:preview).to_s
        - else
          = t('.thumb')
    %p.appmsg_desc
      = @public_account.default_sin_material.sin_pic_text.desc
