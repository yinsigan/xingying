- if @weixin_users.blank?
  .bs-callout.bs-callout-default
    %h4= raw t("access_token_error", public_account_id: @public_account.id)
- else
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        = t('.list')
        (#{@weixin_users_count})
    %table.table.public_account_thumbs
      %tr
        %th
          昵称
        %th
          头像
        %th
          性别
        %th
          城市
        %th
          省份
        %th
          关注时间
      = render partial: "weixin_user", collection: @weixin_users