- if @weixin_users.blank?
  .bs-callout.bs-callout-default
    %h4= raw t("access_token_error", public_account_id: @public_account.id)
- else
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        = t('.list')
        (#{@weixin_users_count})
    %table.table.public_account_thumbs
      %tr
        %th
          = t('.nickname')
        %th
          = t('.headimgurl')
        %th
          = t('.sex')
        %th
          = t('.city')
        %th
          = t('.province')
        %th
          = t('.subscribe_time')
      = render partial: "weixin_user", collection: @weixin_users
    .row#page
      .col-md-12.text-right
        = paginate @users, remote: true

:coffee

  $("#page a").on "ajax:before", ->
    $("#request_users").html "#{t('loading')}"